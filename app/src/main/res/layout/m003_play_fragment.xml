<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:fitsSystemWindows="true">

    <com.canhmai.ailatrieuphu.MyDrawerlLayout
        android:id="@+id/dl_my_drawerlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ln_play_main"
                android:name="androidx.navigation.fragment.NavHostFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorbg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/list_question"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_list_rank"
                            app:tint="@color/orange"
                            tools:ignore="ContentDescription" />

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="20dp">

                            <ProgressBar
                                android:id="@+id/progress_bar_loading"
                                style="@style/Widget.Material3.CircularProgressIndicator"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:indeterminate="false"
                                android:max="100"
                                android:progress="100"
                                android:progressDrawable="@drawable/layer_list_time_countdown" />

                            <TextView

                                android:id="@+id/tv_time_countdown"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="sans-serif-black"
                                android:text="@string/countdownt_time"
                                android:textColor="@color/white"
                                android:textSize="17sp"
                                android:textStyle="bold" />
                        </FrameLayout>

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="20dp"
                            android:src="@drawable/dollars"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:id="@+id/tv_money_count"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="@string/current_money"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="2dp"
                        android:background="@color/white" />

                    <TableRow

                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="horizontal">


                        <ImageView
                            android:id="@+id/iv_give_up"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:src="@drawable/ic_stop_game"
                            tools:ignore="ContentDescription" />

                        <ImageView
                            android:id="@+id/iv_change_question"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:src="@drawable/ic_change_question"
                            tools:ignore="ContentDescription" />


                        <ImageView
                            android:id="@+id/iv_search"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="2dp"
                            android:src="@drawable/circle_search"
                            tools:ignore="ContentDescription" />
                    </TableRow>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="2dp"
                        android:background="@color/white" />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="horizontal">

                        <ImageView
                            android:id="@+id/iv_5050"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:src="@drawable/ic_50_50"
                            tools:ignore="ContentDescription" />

                        <ImageView
                            android:id="@+id/iv_ask_audience"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:src="@drawable/ic_help_audiance"
                            tools:ignore="ContentDescription" />

                        <ImageView
                            android:id="@+id/iv_call"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:src="@drawable/ic_help_call"
                            tools:ignore="ContentDescription" />

                        <ImageView
                            android:id="@+id/iv_tu_van"
                            android:layout_width="33dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:src="@drawable/circle_tuvan"
                            android:visibility="gone"
                            tools:ignore="ContentDescription" />


                    </TableRow>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"

                    android:background="@color/white" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="170dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/ic_player_question_background">


                    <TextView
                        android:id="@+id/tv_question_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top"
                        android:layout_marginHorizontal="10dp"
                        android:background="@drawable/bg_question"
                        android:backgroundTintMode="src_in"
                        android:elevation="11dp"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#E65100"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="15dp">


                        <TextView
                            android:id="@+id/tv_show_question"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:paddingHorizontal="30dp"
                            android:paddingVertical="5dp"
                            android:text=""
                            android:textColor="@color/orange"
                            android:textSize="16sp" />
                    </ScrollView>

                </FrameLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tv_A"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_marginHorizontal="10dp"
                        android:background="@drawable/ic_player_answer"
                        android:backgroundTintMode="src_in"
                        android:elevation="11dp"
                        android:fontFamily="sans-serif"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="30dp"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="16sp" />


                    <TextView
                        android:id="@+id/tv_B"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/ic_player_answer"
                        android:backgroundTintMode="src_in"
                        android:elevation="11dp"
                        android:fontFamily="sans-serif"
                        android:gravity="center_vertical|start"
                        android:paddingHorizontal="30dp"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_C"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/ic_player_answer"
                        android:backgroundTintMode="src_in"
                        android:elevation="11dp"
                        android:fontFamily="sans-serif"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="30dp"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_D"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/ic_player_answer"
                        android:backgroundTintMode="src_in"
                        android:elevation="11dp"
                        android:fontFamily="sans-serif"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="30dp"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="16sp" />


                </LinearLayout>
            </LinearLayout>


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <com.airbnb.lottie.LottieAnimationView
               android:id="@+id/lottie_firework2"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:visibility="gone"
               android:layout_gravity="center"

               app:lottie_autoPlay="true"
               app:lottie_loop="true"
               app:lottie_rawRes="@raw/lottie_firework2" />

           <com.airbnb.lottie.LottieAnimationView
               android:id="@+id/lottie_firework1"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_gravity="center"
               android:visibility="gone"
               app:lottie_autoPlay="true"
               app:lottie_loop="true"
               app:lottie_rawRes="@raw/lottie_firework1" />

       </LinearLayout>

        </FrameLayout>

        <include
            android:id="@+id/include"
            layout="@layout/m002_rule_fragment"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_gravity="start" />

    </com.canhmai.ailatrieuphu.MyDrawerlLayout>


</LinearLayout>






